@model Library.Data.ViewModels.BorrowViewModel
@{
    ViewData["Title"] = "Borrow Book";
}

<h2>Borrow a Book</h2>

<form asp-action="Borrow" method="post">
    <div class="form-group">
        <label asp-for="BookId" class="control-label">Books</label>
        <select asp-for="BookId" asp-items="ViewBag.BookList" class="form-control">
            <option value="">-- Select --</option>
        </select>
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Borrow</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



